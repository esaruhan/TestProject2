<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RaporServlet</servlet-name>
        <servlet-class>vodafone.servlets.RaporServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountServlet</servlet-name>
        <servlet-class>vodafone.servlets.CountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToplamAnaliz</servlet-name>
        <servlet-class>vodafone.servlets.ToplamAnaliz</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RaporServlet</servlet-name>
        <url-pattern>/RaporServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountServlet</servlet-name>
        <url-pattern>/CountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToplamAnaliz</servlet-name>
        <url-pattern>/ToplamAnaliz</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
